<%- include('../partials/header'); %>

<section class="item content">
    <div class="container toparea">
        
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <div class="done">
                    <div class="alert alert-success">
                        <button type="button" class="close" data-dismiss="alert">Ã—</button>
                        Your message has been sent. Thank you!
                    </div>
                </div>
                <form method="post" action="/edit/<%= model.id_produk %>" id="contactform" enctype="multipart/form-data">
                    <div class="form">
                        <div class="underlined-title">
                            <div class="editContent">
                                <h1 class="text-center latestitems">Edit Smartphone</h1>
                            </div>
                            <div class="wow-hr type_short">
                                <span class="wow-hr-h">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                </span>
                            </div>
                        </div>
                        <label for="id">ID Produk</label>
                        <input type="text" name="id" value="<%= model.id_produk %>">
                        <label for="tipe">Tipe</label>
                        <input type="text" name="tipe" value="<%= model.tipe %>">
                        <label for="merk">Merk</label>
                        <input type="text" name="merk" value="<%= model.merk %>">
                        <label for="waktu1">Waktu Pengumuman</label>
                        <input type="text" name="waktu1" value="<%= model.waktu_pengumuman %>">
                        <label for="waktu2">Waktu Rilis</label>
                        <input type="text" name="waktu2" value="<%= model.waktu_rilis %>">
                        <label for="gambar">Gambar Produk</label>
                        <input type="file" name="gambar"/>
    
                        <div class="underlined-title">
                            <div class="editContent">
                                <h1 class="text-center latestitems">Spesifikasi</h1>
                            </div>
                            <div class="wow-hr type_short">
                                <span class="wow-hr-h">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                </span>
                            </div>
                        </div>
                        <label for="os">Sistem Operasi</label>
                        <input type="text" name="os" value="<%= model.sistem_operasi %>">
                        <label for="prosesor">Prosesor</label>
                        <input type="text" name="prosesor" value="<%= model.prosesor %>">
                        <label for="memori">Memori</label>
                        <input type="text" name="memori" value="<%= model.memori %>">
                        <label for="kamera">Kamera Utama</label>
                        <input type="text" name="kamera" value="<%= model.kamera_utama %>">
                        <label for="layar">Layar</label>
                        <input type="text" name="layar" value="<%= model.layar %>">
                        <label for="baterai">Baterai</label>
                        <input type="text" name="baterai" value="<%= model.baterai %>">
                        <label for="warna">Warna</label>
                        <input type="text" name="warna" value="<%= model.warna %>">
    
                        <div class="underlined-title">
                            <div class="editContent">
                                <h1 class="text-center latestitems">Score</h1>
                            </div>
                            <div class="wow-hr type_short">
                                <span class="wow-hr-h">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                </span>
                            </div>
                        </div>
                        <label for="geekbench1">GeekBench 5 (Single-core)</label>
                        <input type="text" name="geekbench1" value="<%= model.geekbench5_single %>">
                        <label for="geekbench2">GeekBench 5 (Multi-core)</label>
                        <input type="text" name="geekbench2" value="<%= model.geekbench5_multi %>">
                        <label for="dxomark">DxOMark (Kamera)</label>
                        <input type="text" name="dxomark" value="<%= model.dxomark %>">
                        <label for="displaymate">DisplayMate (Layar)</label>
                        <input type="text" name="displaymate" value="<%= model.displaymate %>">
                        <label for="ber">Battery Endurance Rating (Baterai)</label>
                        <input type="text" name="ber" value="<%= model.battery_endurance_rating %>">

                        <input type="submit" id="submit" class="clearfix btn" value="Update">
                        <a class="btn btn-outline-dark cancel" href="/settings">Cancel</a>
				</div>
			</form>
		</div>
	</div>
</div>
</div>
</section>

<%- include('../partials/footer'); %>